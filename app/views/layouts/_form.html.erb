<%= form_with model: @user do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name, "名前" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email, "Email" %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password, class: 'form-control' %>

<% end %>
